<style>
table,
td {
    border: 1px solid #333;
}

thead,
tfoot {
    background-color: #333;
    color: #fff;
}
</style>
<table>
    <thead>
        <tr>
            <th colspan="1"><%= @cat.name %> </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age: <%= @cat.age %> </td>
        </tr>
        <tr>
            <td>Color: <%= @cat.color %> </td>
        </tr>
        <tr>
            <td>Sex: <%= @cat.sex %></td>
        </tr>
        <tr>
            <td>Birthday: <%= @cat.birth_date %></td>
        </tr>
        <tr>
            <td>Description: <%= @cat.description %></td>
        </tr>
    </tbody>
</table>